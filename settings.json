{
    /***********************************************
    *                                              *
    * Mark Naberukhin's fancy settings for VS code *
    *                                              *
    ************************************************/

    // VS Code
    "zenMode.hideTabs": false,
    "zenMode.hideActivityBar": false,
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    // "[javascript]": {
    //     "editor.defaultFormatter": "vscode.typescript-language-features"
    // },
    // "[javascriptreact]": {
    //     "editor.defaultFormatter": "vscode.typescript-language-features"
    // },
    // "[typescriptreact]": {
    //     "editor.defaultFormatter": "vscode.typescript-language-features"
    // },
    "window.zoomLevel": 0,
    "editor.suggestSelection": "first",
    "debug.node.useV3": true,
    "debug.chrome.useV3": true,
    "explorer.confirmDelete": false,
    "editor.fastScrollSensitivity": 7,
    "workbench.editor.highlightModifiedTabs": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.tabSize": 2,
    "explorer.confirmDragAndDrop": false,

    // Prettiter
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "[javascript]": {
        "editor.formatOnSave": false,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.formatOnSave": false,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescriptreact]": {
        "editor.formatOnSave": false,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascriptreact]": {
        "editor.formatOnSave": false,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.formatOnSave": false,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[graphql]": {
        "editor.formatOnSave": false,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "prettier.jsxBracketSameLine": true,
    "prettier.jsxSingleQuote": true,
    "prettier.singleQuote": true,
    "editor.codeActionsOnSave": {
        // For ESLint
        "source.fixAll.eslint": false,
        // For TSLint
        "source.fixAll.tslint": false,
        // For Stylelint
        "source.fixAll.stylelint": false
    },


    // VSIntellicode
    "vsintellicode.modify.editor.suggestSelection": "choseToUpdateConfiguration",


    // TODO Highlight
    "todohighlight.isEnable": true,
    "todohighlight.isCaseSensitive": false,
    "todohighlight.keywords": [
        "@mna:"
    ],

    // Gitlens
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.gitCommands.skipConfirmations": [
        "fetch:command",
        "stash-push:command",
        "switch:command",
        "pull:command"
    ],

    // Neovim
    "vscode-neovim.neovimPath": "/usr/bin/nvim",

    // Theme
    "workbench.colorTheme": "Gruvbox Material Dark",
    "gruvboxMaterial.darkPalette": "mix",
    "gruvboxMaterial.lightContrast": "soft",
    "gruvboxMaterial.darkContrast": "hard",
    "gruvboxMaterial.darkWorkbench": "high-contrast",
    "gruvboxMaterial.darkSelection": "green",

    "files.autoSave": "off",
    "settingsSync.ignoredExtensions": [],

    // Node.js intellisense
    "node-module-intellisense.scanBuiltinModules": true,
    "node-module-intellisense.scanDevDependencies": true,
    "node-module-intellisense.scanFileModules": true,
}
